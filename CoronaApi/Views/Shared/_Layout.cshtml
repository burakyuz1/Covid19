@{
    string currentPage = ViewContext.RouteData.Values["action"].ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/css/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>COVID - 19</title>
</head>
<body>
    <header class="header">
        <div class="container">

            <a href="#">
                <img src="img/logo.svg" alt="">
            </a>
            <nav class="menu">
                <ul>
                    <li class="@(currentPage == "AllCountries" ? "active" : "")">
                        <a asp-controller="Corona" asp-action="AllCountries">
                            <i class="fas fa-home"></i>
                            <span>All Countries</span>
                        </a>
                    </li>
                    <li class="@(currentPage == "CountryCases" ? "active" : "")">
                        <a asp-controller="Corona" asp-action="CountryCases">
                            <i class="fas fa-info-circle"></i>
                            <span>Country Case</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>


    @RenderBody()



    <div class="footer-basic">
        <footer>
            <div class="social">
                <a target="_blank" href="https://www.instagram.com/brkkyz"><i class="fab fa-instagram"></i></a>
                <a target="_blank" href="https://www.github.com/burakyuz1"><i class="fab fa-github"></i></a>
                <a target="_blank" href="https://www.hackerrank.com/burakyuzz"><i class="fa-brands fa-hackerrank"></i></a>
                <a target="_blank" href="https://www.linkedin.com/in/burakyuzz"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Home</a></li>
                <li class="list-inline-item"><a href="#">Services</a></li>
                <li class="list-inline-item"><a href="#">About</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
            </ul>
            <p class="copyright">burakakyuz.tk © 2022</p>
        </footer>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts",false) 
</body>
</html>